<style>
    @import url('/css/admin/management/exhibition/ExhibitionManagementDetail.css');
</style>
<!-- 페이지 헤더 -->
<div class="admin-management">
    <div class="content-section">
        <h2 class="admin-title">전시회 상세</h2>
        <div class="section-content">
            <div class="form-grid">
                <div class="form-group">
                    <label>ID</label>
                    <input type="text" value="<%= exhibition.id %>" readonly>
                </div>
                <div class="form-group">
                    <label>제목</label>
                    <input type="text" value="<%= exhibition.title %>" readonly>
                </div>
                <div class="form-group">
                    <label>전시 유형</label>
                    <select disabled>
                        <option value="regular" <%=exhibition.exhibitionType==='regular' ? 'selected' : '' %>>정기
                        </option>
                        <option value="special" <%=exhibition.exhibitionType==='special' ? 'selected' : '' %>>특별
                        </option>
                    </select>
                </div>
                <div class="form-group">
                    <label>장소</label>
                    <input type="text" value="<%= exhibition.location %>" readonly>
                </div>
                <div class="form-group">
                    <label>출품가능 여부</label>
                    <select disabled>
                        <option value="true" <%=exhibition.isSubmissionOpen ? 'selected' : '' %>>출품 가능</option>
                        <option value="false" <%=!exhibition.isSubmissionOpen ? 'selected' : '' %>>출품 불가능</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>시작일</label>
                    <input type="date" value="<%= exhibition.startDate %>" readonly>
                </div>
                <div class="form-group">
                    <label>종료일</label>
                    <input type="date" value="<%= exhibition.endDate %>" readonly>
                </div>
                <div class="form-group">
                    <label>설명</label>
                    <textarea readonly><%= exhibition.description %></textarea>
                </div>
                <div class="form-group">
                    <label>생성일</label>
                    <input type="text" value="<%= new Date(exhibition.createdAt).toLocaleDateString() %>" readonly>
                </div>
                <div class="form-group">
                    <label>수정일</label>
                    <input type="text" value="<%= new Date(exhibition.updatedAt).toLocaleDateString() %>" readonly>
                </div>
            </div>
        </div>
        <div class="section-footer">
            <div class="admin-button-group">
                <button class="admin-button admin-button--secondary" onclick="handleEdit()">
                    <i class="fas fa-edit"></i>
                    수정
                </button>
                <button class="admin-button admin-button--danger" onclick="handleDelete()">
                    <i class="fas fa-trash"></i>
                    삭제
                </button>
            </div>
        </div>
    </div>
</div>
<div class="admin-back-button-container">
    <a onclick="history.back()" class="admin-button admin-button--backtolist">
        <i class="fas fa-list"></i>
        목록으로
    </a>
</div>


<script>
    function handleEdit() {
        const form = document.querySelector('.form-grid');
        const inputs = form.querySelectorAll('input, select, textarea');
        inputs.forEach(input => {
            if (input.type !== 'text' || input.value !== exhibition.id) {
                input.readOnly = false;
                input.disabled = false;
            }
        });

        const actionButtons = `
            <button type="button" class="admin-button admin-button--primary" onclick="handleSave()">
                <i class="fas fa-save"></i>
                저장
            </button>
            <button type="button" class="admin-button admin-button--secondary" onclick="handleCancel()">
                <i class="fas fa-times"></i>
                취소
            </button>
        `;
        document.querySelector('.admin-button-group').innerHTML = actionButtons;
    }

    function handleSave() {
        const formData = {
            title: document.querySelector('input[value="<%= exhibition.title %>"]').value,
            exhibitionType: document.querySelector('select').value,
            isSubmissionOpen: document.querySelector('select').value === 'true',
            startDate: document.querySelector('input[type="date"]').value,
            endDate: document.querySelector('input[type="date"]:last-of-type').value,
            location: document.querySelector('input[value="<%= exhibition.location %>"]').value,
            description: document.querySelector('textarea').value
        };

        fetch(`/api/admin/exhibition/<%= exhibition.id %>`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(formData)
        })
            .then(response => {
                if (response.ok) {
                    alert('전시회 정보가 성공적으로 수정되었습니다.');
                    location.reload();
                } else {
                    alert('전시회 정보 수정 중 오류가 발생했습니다.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('전시회 정보 수정 중 오류가 발생했습니다.');
            });
    }

    function handleCancel() {
        location.reload();
    }

    function handleDelete() {
        if (confirm('정말로 이 전시회를 삭제하시겠습니까?')) {
            fetch(`/api/admin/exhibition/<%= exhibition.id %>`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
                .then(response => {
                    if (response.ok) {
                        alert('전시회가 성공적으로 삭제되었습니다.');
                        window.location.href = '/admin/management/exhibition';
                    } else {
                        alert('전시회 삭제 중 오류가 발생했습니다.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('전시회 삭제 중 오류가 발생했습니다.');
                });
        }
    }
</script>
