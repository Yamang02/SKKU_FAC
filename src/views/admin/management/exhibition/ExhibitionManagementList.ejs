<style>
    @import url('/css/admin/management/exhibition/ExhibitionManagementList.css');
</style>

<div class="admin-management">
    <h2 class="admin-title">전시회 목록</h2>
    <!-- 필터 섹션 -->
    <div class="admin-filter">
        <div class="admin-filter__group">
            <select class="admin-filter__select">
                <option value="">전시 유형</option>
                <option value="regular">정기</option>
                <option value="special">특별</option>
            </select>
            <button class="admin-button admin-button--primary">
                <i class="fas fa-filter"></i>
                필터 적용
            </button>
        </div>
    </div>

    <div class="admin-management__content">
        <!-- 테이블 섹션 -->
        <div class="admin-table-container">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" class="admin-checkbox">
                        </th>
                        <th>ID</th>
                        <th>제목</th>
                        <th>부제목</th>
                        <th>전시 기간</th>
                        <th>장소</th>
                        <th>전시 유형</th>
                        <th>관리</th>
                    </tr>
                </thead>
                <tbody>
                    <% exhibitions.forEach(exhibition=> { %>
                        <tr>
                            <td>
                                <input type="checkbox" class="admin-checkbox">
                            </td>
                            <td>
                                <%= exhibition.id %>
                            </td>
                            <td>
                                <%= exhibition.title %>
                            </td>
                            <td>
                                <%= exhibition.subtitle %>
                            </td>
                            <td>
                                <%= exhibition.startDate %> ~ <%= exhibition.endDate %>
                            </td>
                            <td>
                                <%= exhibition.location %>
                            </td>
                            <td>
                                <span class="admin-badge admin-badge--<%= exhibition.exhibitionType %>">
                                    <%= exhibition.exhibitionType==='regular' ? '정기' : '특별' %>
                                </span>
                            </td>
                            <td>
                                <div class="admin-button-group">
                                    <a href="/admin/management/exhibition/<%= exhibition.id %>"
                                        class="admin-button admin-button--secondary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button class="admin-button admin-button--danger"
                                        onclick="deleteExhibition(<%= exhibition.id %>)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>

        <!-- 페이지네이션 섹션 -->
        <% if (typeof page !=='undefined' && page) { %>
            <div class="admin-pagination">
                <% if (page.hasPreviousPage) { %>
                    <a href="<%= page.previousPageUrl %>" class="admin-pagination__button">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                    <% } %>

                        <% for (let i=page.startPage; i <=page.endPage; i++) { %>
                            <a href="<%= page.getPageUrl(i) %>"
                                class="admin-pagination__button <%= i === page.currentPage ? 'admin-pagination__button--active' : '' %>">
                                <%= i %>
                            </a>
                            <% } %>

                                <% if (page.hasNextPage) { %>
                                    <a href="<%= page.nextPageUrl %>" class="admin-pagination__button">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                    <% } %>
            </div>
            <% } %>
    </div>
</div>

<script>
    function deleteExhibition(id) {
        if (confirm('정말로 이 전시회를 삭제하시겠습니까?')) {
            fetch(`/api/admin/exhibition/${id}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
                .then(response => {
                    if (response.ok) {
                        alert('전시회가 성공적으로 삭제되었습니다.');
                        location.reload();
                    } else {
                        alert('전시회 삭제 중 오류가 발생했습니다.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('전시회 삭제 중 오류가 발생했습니다.');
                });
        }
    }
</script>
