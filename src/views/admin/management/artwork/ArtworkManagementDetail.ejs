<style>
    @import url('/css/admin/management/artwork/ArtworkManagementDetail.css');
</style>
<!-- 페이지 헤더 -->
<div class="admin-management">
    <div class="content-section">
        <h2 class="admin-title">작품 상세</h2>

        <!-- 알림 메시지 표시 -->
        <% if (messages && (messages.success.length> 0 || messages.error.length > 0)) { %>
            <div class="admin-messages">
                <% if (messages.success.length> 0) { %>
                    <div class="admin-message admin-message--success">
                        <i class="fas fa-check-circle"></i>
                        <%= messages.success[0] %>
                    </div>
                    <% } %>
                        <% if (messages.error.length> 0) { %>
                            <div class="admin-message admin-message--error">
                                <i class="fas fa-exclamation-circle"></i>
                                <%= messages.error[0] %>
                            </div>
                            <% } %>
            </div>
            <% } %>

                <div class="section-content">
                    <form id="artworkForm" method="POST"
                        action="/admin/management/artwork/<%= artwork.id %>?_method=PUT">
                        <div class="form-grid">
                            <div class="form-group">
                                <label>ID</label>
                                <input type="text" name="id" value="<%= artwork.id %>" readonly>
                            </div>
                            <div class="form-group">
                                <label>제목</label>
                                <input type="text" name="title" value="<%= artwork.title %>" required>
                            </div>
                            <div class="form-group">
                                <label>작가</label>
                                <select name="userId" required>
                                    <% artists.forEach(artist=> { %>
                                        <option value="<%= artist.id %>" <%=artwork.userId===artist.id ? 'selected' : ''
                                            %>>
                                            <%= artist.name %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>전시회</label>
                                <select name="exhibitionId">
                                    <option value="">전시회 없음</option>
                                    <% exhibitions.forEach(exhibition=> { %>
                                        <option value="<%= exhibition.id %>" <%=artwork.exhibitionId===exhibition.id
                                            ? 'selected' : '' %>>
                                            <%= exhibition.title %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>재료</label>
                                <input type="text" name="medium" value="<%= artwork.medium %>">
                            </div>
                            <div class="form-group">
                                <label>크기</label>
                                <input type="text" name="size" value="<%= artwork.size %>">
                            </div>
                            <div class="form-group">
                                <label>제작년도</label>
                                <input type="text" name="year" value="<%= artwork.year %>">
                            </div>
                            <div class="form-group">
                                <label>상태</label>
                                <select name="status" required>
                                    <option value="PENDING" <%=artwork.status==='PENDING' ? 'selected' : '' %>>대기 중
                                    </option>
                                    <option value="APPROVED" <%=artwork.status==='APPROVED' ? 'selected' : '' %>>승인됨
                                    </option>
                                    <option value="BLOCKED" <%=artwork.status==='BLOCKED' ? 'selected' : '' %>>차단됨
                                    </option>
                                    <option value="DELETED" <%=artwork.status==='DELETED' ? 'selected' : '' %>>삭제됨
                                    </option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>주요 작품</label>
                                <div class="toggle-switch">
                                    <input type="checkbox" id="isFeatured" name="isFeatured" <%=artwork.isFeatured
                                        ? 'checked' : '' %>>
                                    <label for="isFeatured"></label>
                                    <span class="toggle-label">
                                        <%= artwork.isFeatured ? '예' : '아니오' %>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group form-group--wide">
                                <label>설명</label>
                                <textarea name="description"><%= artwork.description %></textarea>
                            </div>
                            <div class="form-group form-group--wide">
                                <label>이미지</label>
                                <div class="image-preview">
                                    <img src="<%= artwork.imageUrl %>" alt="<%= artwork.title %>">
                                </div>
                                <div class="image-info">
                                    <small>이미지 ID: <%= artwork.imagePublicId || '없음' %></small>
                                    <p>이미지를 변경하려면 작품 삭제 후 다시 등록해야 합니다.</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>생성일</label>
                                <input type="text" value="<%= artwork.createdAtFormatted %>" readonly>
                            </div>
                            <div class="form-group">
                                <label>수정일</label>
                                <input type="text" value="<%= artwork.updatedAtFormatted %>" readonly>
                            </div>
                        </div>
                        <div class="admin-button-group">
                            <button type="submit" class="admin-button admin-button--primary">
                                <i class="fas fa-save"></i>
                                저장
                            </button>
                            <a href="/admin/management/artwork" class="admin-button admin-button--secondary">
                                <i class="fas fa-times"></i>
                                취소
                            </a>
                        </div>
                    </form>
                </div>
    </div>
    <div class="section-footer">
        <div class="admin-button-group">
            <form action="/admin/management/artwork/<%= artwork.id %>/featured" method="POST" style="display: inline;">
                <button type="submit"
                    class="admin-button admin-button--feature <%= artwork.isFeatured ? 'admin-button--featured' : '' %>">
                    <i class="fas fa-star"></i>
                    <%= artwork.isFeatured ? '주요 작품 해제' : '주요 작품 설정' %>
                </button>
            </form>
            <form action="/admin/management/artwork/<%= artwork.id %>?_method=DELETE" method="POST" id="deleteForm"
                style="display: inline;">
                <button type="button" class="admin-button admin-button--danger" onclick="confirmDelete()">
                    <i class="fas fa-trash"></i>
                    삭제
                </button>
            </form>
        </div>
    </div>
</div>
<div class="admin-back-button-container">
    <a href="/admin/management/artwork" class="admin-button admin-button--backtolist">
        <i class="fas fa-list"></i>
        목록으로
    </a>
</div>

<script>
    function confirmDelete() {
        if (confirm('정말로 이 작품을 삭제하시겠습니까?\n\n' +
            '⚠️ 경고: 이 작업은 되돌릴 수 없습니다.\n' +
            '• 해당 작품의 모든 정보가 영구적으로 삭제됩니다.\n' +
            '• 작품과 관련된 모든 데이터(이미지, 설명 등)가 함께 삭제됩니다.\n' +
            '• 이 작업은 되돌릴 수 없으므로 신중하게 결정해주세요.')) {
            document.getElementById('deleteForm').submit();
        }
    }
</script>
