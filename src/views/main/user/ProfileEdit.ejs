<style ref="stylesheet">
    @import url('/css/common/components/usercommon.css');
    @import url('/css/user/ProfileEdit.css');
</style>

<div class="page-container-user">
    <div class="page-content-user">
        <div class="page-card-user profile-edit-page">
            <h1 class="page-title-user">프로필 수정</h1>
            <% if (locals.error) { %>
                <div class="alert-danger-user">
                    <%= error %>
                </div>
                <% } %>
                    <form class="form-user" action="/user/profile/edit" method="POST">
                        <div class="profile-edit-grid">
                            <div class="form-group-user">
                                <label class="form-label-user" for="username">사용자 ID</label>
                                <input type="text" id="username" name="username" class="form-control-user"
                                    value="<%= user.username %>" readonly>
                            </div>
                            <div class="form-group-user">
                                <label class="form-label-user" for="name">이름</label>
                                <input type="text" id="name" name="name" class="form-control-user"
                                    value="<%= user.name %>" required>
                            </div>
                            <div class="form-group-user">
                                <label class="form-label-user" for="email">이메일</label>
                                <input type="email" id="email" name="email" class="form-control-user"
                                    value="<%= user.email %>" required>
                            </div>
                            <div class="student-info-group">
                                <div class="form-group-user">
                                    <label class="form-label-user" for="department">학과</label>
                                    <input type="text" id="department" name="department" class="form-control-user"
                                        value="<%= user.department || '' %>" placeholder="소속 학과를 입력하세요">
                                </div>
                                <div class="form-group-user">
                                    <label class="form-label-user" for="studentYear">학번(2자리)</label>
                                    <input type="text" id="studentYear" name="studentYear" class="form-control-user"
                                        value="<%= user.studentYear || '' %>" pattern="[0-9]{2}" maxlength="2"
                                        placeholder="ex) 19" title="입학년도 2자리를 입력하세요">
                                </div>
                            </div>
                        </div>

                        <div class="password-section">
                            <div class="form-group-user">
                                <label class="form-label-user" for="currentPassword">현재 비밀번호</label>
                                <input type="password" id="currentPassword" name="currentPassword"
                                    class="form-control-user" placeholder="현재 비밀번호를 입력하세요">
                            </div>
                            <div class="form-group-user">
                                <label class="form-label-user" for="newPassword">새 비밀번호</label>
                                <input type="password" id="newPassword" name="newPassword" class="form-control-user"
                                    placeholder="새 비밀번호를 입력하세요">
                            </div>
                            <div class="form-group-user">
                                <label class="form-label-user" for="confirmPassword">새 비밀번호 확인</label>
                                <input type="password" id="confirmPassword" name="confirmPassword"
                                    class="form-control-user" placeholder="새 비밀번호를 다시 입력하세요">
                            </div>
                        </div>

                        <div class="button-group-user">
                            <button type="submit" class="btn-primary-user">
                                <i class="fas fa-save"></i>
                                변경사항 저장
                            </button>
                            <a href="/user/profile" class="btn-secondary-user">
                                <i class="fas fa-arrow-left"></i>
                                돌아가기
                            </a>
                        </div>
                    </form>
        </div>
    </div>
</div>

<script src="/js/page/user/ProfileEdit.js"></script>
