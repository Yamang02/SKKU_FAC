<style ref="stylesheet">
    @import url('/css/common/components/usercommon.css');
    @import url('/css/user/Profile.css');
</style>

<div class="profile-page">
    <div class="profile-card">
        <div class="profile-header">
            <h1 class="profile-title">프로필</h1>
        </div>

        <% if (locals.error) { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
            <% } %>
                <% if (locals.success) { %>
                    <div class="alert alert-success">
                        <%= success %>
                    </div>
                    <% } %>

                        <div class="profile-content">
                            <!-- 기본 정보 -->
                            <div class="profile-basic-info">
                                <div class="profile-image">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="info-group">
                                    <div class="info-item">
                                        <span class="info-label">사용자 ID</span>
                                        <span class="info-value">
                                            <%= user.username %>
                                        </span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">이름</span>
                                        <span class="info-value">
                                            <%= user.name %>
                                        </span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">이메일</span>
                                        <span class="info-value">
                                            <%= user.email %>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <!-- 상세 정보 -->
                            <div class="profile-details">
                                <% if (user.role==='SKKU_MEMBER' ) { %>
                                    <div class="info-group">
                                        <h3 class="info-group-title">학교 정보</h3>
                                        <div class="info-item">
                                            <span class="info-label">학과</span>
                                            <span class="info-value">
                                                <%= user.department || '학과 정보 없음' %>
                                            </span>
                                        </div>
                                        <div class="info-item">
                                            <span class="info-label">학번</span>
                                            <span class="info-value">
                                                <%= user.studentYear ? user.studentYear + '학번' : '미입력' %>
                                            </span>
                                        </div>
                                        <div class="info-item">
                                            <span class="info-label">동아리 회원</span>
                                            <span class="info-value">
                                                <%= user.isClubMember ? '동아리 회원' : '일반 회원' %>
                                            </span>
                                        </div>
                                    </div>
                                    <% } else if (user.role==='EXTERNAL_MEMBER' ) { %>
                                        <div class="info-group">
                                            <h3 class="info-group-title">소속 정보</h3>
                                            <div class="info-item">
                                                <span class="info-label">소속</span>
                                                <span class="info-value">
                                                    <%= user.affiliation || '소속 정보 없음' %>
                                                </span>
                                            </div>
                                        </div>
                                        <% } %>

                                            <div class="info-group">
                                                <h3 class="info-group-title">계정 정보</h3>
                                                <div class="info-item">
                                                    <span class="info-label">회원 유형</span>
                                                    <span class="info-value">
                                                        <%= user.role==='SKKU_MEMBER' ? '성균관대 재학/졸업생' : '외부 인원' %>
                                                    </span>
                                                </div>
                                                <div class="info-item">
                                                    <span class="info-label">가입일</span>
                                                    <span class="info-value">
                                                        <%= new Date(user.createdAt).toLocaleDateString() %>
                                                    </span>
                                                </div>
                                            </div>
                            </div>
                        </div>

                        <div class="profile-actions">
                            <button type="button" id="edit-profile-btn" class="btn btn-primary">
                                <i class="fas fa-edit"></i>
                                프로필 수정
                            </button>
                            <button type="button" id="logout-btn" class="btn btn-secondary">
                                <i class="fas fa-sign-out-alt"></i>
                                로그아웃
                            </button>
                            <button type="button" class="btn btn-danger" data-modal="deleteAccountModal">
                                <i class="fas fa-trash-alt"></i>
                                계정 삭제
                            </button>
                        </div>
    </div>
</div>

<!-- 프로필 수정 모달 -->
<div class="modal" id="editProfileModal">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">프로필 수정</h5>
            <button type="button" class="modal-close">&times;</button>
        </div>
        <div class="modal-body">
            <form id="edit-profile-form">
                <div class="form-group">
                    <label class="form-label">이름</label>
                    <input type="text" class="form-control" name="name" value="<%= user.name %>" required>
                </div>

                <% if (user.role==='SKKU_MEMBER' ) { %>
                    <div class="form-group">
                        <label class="form-label">학과</label>
                        <input type="text" class="form-control" name="department" value="<%= user.department || '' %>">
                    </div>
                    <div class="form-group">
                        <label class="form-label">학번</label>
                        <input type="text" class="form-control" name="studentYear" value="<%= user.studentYear || '' %>"
                            pattern="[0-9]{2}" placeholder="예: 23">
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="isClubMember" id="isClubMember"
                                <%=user.isClubMember ? 'checked' : '' %>>
                            <label class="form-check-label" for="isClubMember">동아리 회원</label>
                        </div>
                    </div>
                    <% } else if (user.role==='EXTERNAL_MEMBER' ) { %>
                        <div class="form-group">
                            <label class="form-label">소속</label>
                            <input type="text" class="form-control" name="affiliation"
                                value="<%= user.affiliation || '' %>" placeholder="소속 기관명">
                        </div>
                        <% } %>

                            <div class="form-group">
                                <label class="form-label">새 비밀번호</label>
                                <input type="password" class="form-control" name="newPassword"
                                    placeholder="변경하지 않으려면 비워두세요">
                            </div>
                            <div class="form-group">
                                <label class="form-label">새 비밀번호 확인</label>
                                <input type="password" class="form-control" name="confirmPassword"
                                    placeholder="변경하지 않으려면 비워두세요">
                            </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary modal-close">취소</button>
            <button type="button" class="btn btn-primary" id="save-profile-btn">저장</button>
        </div>
    </div>
</div>

<!-- 계정 삭제 모달 -->
<div class="modal" id="deleteAccountModal">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">계정 삭제 확인</h5>
            <button type="button" class="modal-close">&times;</button>
        </div>
        <div class="modal-body">
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i>
                주의: 이 작업은 되돌릴 수 없습니다.
            </div>
            <p>정말로 계정을 삭제하시겠습니까? 모든 데이터가 영구적으로 삭제됩니다.</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary modal-close">취소</button>
            <button type="button" class="btn btn-danger" id="confirmDeleteAccount">
                <i class="fas fa-trash-alt"></i>
                삭제
            </button>
        </div>
    </div>
</div>

<script src="/js/page/user/Profile.js"></script>
