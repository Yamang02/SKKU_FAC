<%- include(ViewPath.MAIN.LAYOUT.HEAD) %>

    <div class="page-container forgot-password-page">
        <div class="page-content">
            <div class="page-card forgot-password-card">
                <h1 class="forgot-password-title">비밀번호 찾기</h1>
                <% if (locals.error) { %>
                    <div class="alert alert-danger">
                        <%= error %>
                    </div>
                    <% } %>
                        <% if (locals.success) { %>
                            <div class="alert alert-success">
                                <%= success %>
                            </div>
                            <% } %>
                                <form class="forgot-password-form" action="/user/forgot-password" method="POST">
                                    <div class="form-group">
                                        <label for="email">이메일</label>
                                        <input type="email" id="email" name="email" class="form-control"
                                            value="<%= locals.email || '' %>" required placeholder="가입시 등록한 이메일을 입력하세요">
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-block">비밀번호 재설정 링크 받기</button>
                                    </div>
                                    <div class="forgot-password-footer">
                                        <a href="/user/login" class="back-to-login">로그인으로 돌아가기</a>
                                    </div>
                                </form>
            </div>
        </div>
    </div>

    <script src="/js/page/user/ForgotPassword.js"></script>
