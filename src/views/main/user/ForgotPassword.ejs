<style ref="stylesheet">
    @import url('/css/common/components/usercommon.css');
    @import url('/css/user/ForgotPassword.css');
</style>
<div class="page-container-user">
    <div class="page-content-user">
        <div class="page-card-user">
            <h1 class="page-title-user">계정 찾기</h1>
            <form class="form-user" id="account-recovery-form">
                <div class="form-group-user">
                    <label for="email">이메일</label>
                    <input type="email" id="email" name="email" class="form-control-user" required
                        placeholder="가입시 등록한 이메일을 입력하세요">
                </div>
                <div class="form-group-user button-group">
                    <button type="button" id="find-username-btn" class="btn-secondary-user">아이디 찾기</button>
                    <button type="submit" class="btn-primary-user">비밀번호 재설정 링크 받기</button>
                </div>
                <div class="form-links-user">
                    <a href="/user/login" class="link-user">로그인으로 돌아가기</a>
                </div>
            </form>

            <!-- 아이디 결과 표시 영역 -->
            <div id="username-result" class="result-container" style="display: none;">
                <p class="result-message">회원님의 아이디는 <strong id="found-username"></strong> 입니다.</p>
            </div>
        </div>
    </div>
</div>

<script type="module" src="/js/page/user/ForgotPassword.js"></script>

<style>
    .button-group {
        display: flex;
        gap: 10px;
    }

    .btn-secondary-user {
        flex: 1;
    }

    .btn-primary-user {
        flex: 2;
    }
</style>
