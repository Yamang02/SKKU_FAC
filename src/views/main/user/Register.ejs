<style ref="stylesheet">
    @import url('/css/common/components/page.css');
    @import url('/css/user/Register.css');
</style>
<div class="page-container-user">
    <div class="page-content-user">
        <div class="page-card-user">
            <h1 class="page-title-user">회원가입</h1>
            <% if (locals.error) { %>
                <div class="alert-danger-user">
                    <%= error %>
                </div>
                <% } %>
                    <form class="form-user" action="/user/register" method="POST">
                        <div class="form-group-user">
                            <label for="username">아이디</label>
                            <input type="text" id="username" name="username" class="form-control-user"
                                value="<%= locals.formData?.username || '' %>" required placeholder="아이디를 입력하세요">
                        </div>
                        <div class="form-group-user">
                            <label for="email">이메일</label>
                            <input type="email" id="email" name="email" class="form-control-user"
                                value="<%= locals.formData?.email || '' %>" required placeholder="이메일을 입력하세요">
                        </div>
                        <div class="form-group-user">
                            <label for="password">비밀번호</label>
                            <div class="password-input-group-user">
                                <input type="password" id="password" name="password" class="form-control-user" required
                                    placeholder="비밀번호를 입력하세요">
                                <button type="button" class="toggle-password-user" aria-label="비밀번호 표시">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>
                        <div class="form-group-user">
                            <label for="name">이름</label>
                            <input type="text" id="name" name="name" class="form-control-user"
                                value="<%= locals.formData?.name || '' %>" required placeholder="이름을 입력하세요">
                        </div>
                        <div class="form-group-user">
                            <label for="department">학과</label>
                            <select id="department" name="department" class="form-control-user" required>
                                <option value="">학과를 선택하세요</option>
                                <% departments.forEach(dept=> { %>
                                    <option value="<%= dept.id %>" <%=locals.formData?.department===dept.id ? 'selected'
                                        : '' %>>
                                        <%= dept.name %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="form-group-user">
                            <label for="role">회원 유형</label>
                            <select id="role" name="role" class="form-control-user" required>
                                <option value="">회원 유형을 선택하세요</option>
                                <% roles.forEach(role=> { %>
                                    <option value="<%= role.value %>" <%=locals.formData?.role===role.value ? 'selected'
                                        : '' %>>
                                        <%= role.label %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="form-group-user">
                            <button type="submit" class="btn-primary-user btn-block-user">회원가입</button>
                        </div>
                        <div class="form-links-user">
                            <a href="/user/login" class="link-user">이미 계정이 있으신가요? 로그인</a>
                        </div>
                    </form>
        </div>
    </div>
</div>

<script src="/js/page/user/Register.js"></script>
