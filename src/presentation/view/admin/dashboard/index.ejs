<%- include('../layout/AdminLayout.ejs', { title: '관리자 대시보드' , breadcrumb: '대시보드' , currentPage: 'dashboard' , content:
    ` <div class="dashboard-grid">
    <!-- 통계 카드 -->
    <div class="stats-card">
        <i class="fas fa-users"></i>
        <h3>총 회원수</h3>
        <p class="stats-number">${stats.totalUsers}</p>
    </div>
    <div class="stats-card">
        <i class="fas fa-image"></i>
        <h3>진행중인 전시</h3>
        <p class="stats-number">${stats.activeExhibitions}</p>
    </div>
    <div class="stats-card">
        <i class="fas fa-palette"></i>
        <h3>등록된 작품</h3>
        <p class="stats-number">${stats.totalArtworks}</p>
    </div>
    <div class="stats-card">
        <i class="fas fa-chart-line"></i>
        <h3>월간 방문자</h3>
        <p class="stats-number">${stats.monthlyVisitors}</p>
    </div>

    <!-- 최근 활동 -->
    <div class="dashboard-section recent-activities">
        <h2>최근 활동</h2>
        <div class="activity-list">
            ${recentActivities.map(activity => `
            <div class="activity-item">
                <i class="${activity.icon}"></i>
                <div class="activity-content">
                    <p>${activity.text}</p>
                    <span class="activity-time">${activity.time}</span>
                </div>
            </div>
            `).join('')}
        </div>
    </div>

    <!-- 최근 공지사항 -->
    <div class="dashboard-section recent-notices">
        <h2>최근 공지사항</h2>
        <div class="notice-list">
            ${recentNotices.map(notice => `
            <div class="notice-item ${notice.isImportant ? 'important' : ''}">
                <h3>${notice.title}</h3>
                <span class="notice-date">${notice.date}</span>
            </div>
            `).join('')}
        </div>
    </div>
    </div>
    `
    }) %>
