<%- include('../layout/AdminLayout.ejs', { title: '관리자 대시보드' , breadcrumb: '대시보드' , currentPage: 'dashboard' , content:
    ` <div class="dashboard-container">
    <!-- 통계 카드 섹션 -->
    <section class="stats-section">
        <div class="stats-grid">
            <div class="stats-card">
                <div class="stats-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stats-info">
                    <h3>총 회원수</h3>
                    <p class="stats-number">${stats.totalUsers}</p>
                </div>
            </div>
            <div class="stats-card">
                <div class="stats-icon">
                    <i class="fas fa-image"></i>
                </div>
                <div class="stats-info">
                    <h3>진행중인 전시</h3>
                    <p class="stats-number">${stats.activeExhibitions}</p>
                </div>
            </div>
            <div class="stats-card">
                <div class="stats-icon">
                    <i class="fas fa-palette"></i>
                </div>
                <div class="stats-info">
                    <h3>등록된 작품</h3>
                    <p class="stats-number">${stats.totalArtworks}</p>
                </div>
            </div>
            <div class="stats-card">
                <div class="stats-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="stats-info">
                    <h3>월간 방문자</h3>
                    <p class="stats-number">${stats.monthlyVisitors}</p>
                </div>
            </div>
        </div>
    </section>

    <div class="dashboard-grid">
        <!-- 최근 활동 섹션 -->
        <section class="dashboard-section recent-activities">
            <div class="section-header">
                <h2><i class="fas fa-history"></i> 최근 활동</h2>
            </div>
            <div class="activity-list">
                ${recentActivities.map(activity => `
                <div class="activity-item">
                    <div class="activity-icon">
                        <i class="${activity.icon}"></i>
                    </div>
                    <div class="activity-content">
                        <p>${activity.text}</p>
                        <span class="activity-time">${activity.time}</span>
                    </div>
                </div>
                `).join('')}
            </div>
        </section>

        <!-- 최근 공지사항 섹션 -->
        <section class="dashboard-section recent-notices">
            <div class="section-header">
                <h2><i class="fas fa-bullhorn"></i> 최근 공지사항</h2>
            </div>
            <div class="notice-list">
                ${recentNotices.map(notice => `
                <div class="notice-item ${notice.isImportant ? 'important' : ''}">
                    <div class="notice-content">
                        <h3>
                            ${notice.isImportant ? '<span class="notice-badge">중요</span>' : ''}
                            ${notice.title}
                        </h3>
                        <span class="notice-date">${notice.date}</span>
                    </div>
                </div>
                `).join('')}
            </div>
        </section>
    </div>
    </div>
    `}) %>
