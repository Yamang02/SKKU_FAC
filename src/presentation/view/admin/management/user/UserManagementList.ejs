<div class="content-section">
    <div class="section-header">
        <h2>회원 관리</h2>
    </div>
    <div class="section-content">
        <table class="data-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>이름</th>
                    <th>이메일</th>
                    <th>역할</th>
                    <th>상태</th>
                    <th>관리</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user=> { %>
                    <tr>
                        <td>
                            <%= user.username %>
                        </td>
                        <td>
                            <%= user.name %>
                        </td>
                        <td>
                            <%= user.email %>
                        </td>
                        <td>
                            <%= user.role %>
                        </td>
                        <td>
                            <%= user.status %>
                        </td>
                        <td>
                            <a href="/admin/management/user/<%= user.id %>" class="btn btn-primary">상세</a>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</div>
