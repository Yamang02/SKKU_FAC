<!DOCTYPE html>
<html lang="ko">

    <head>
        <% const pageTitle=title; const additionalStyles=['/css/user/Profile.css']; %>
            <%- include('../common/head', { pageTitle, additionalStyles }) %>
    </head>

    <body>
        <%- include('../common/header') %>

            <main class="profile-page">
                <div class="container">
                    <div class="profile-card">
                        <h1 class="profile-title">프로필 수정</h1>

                        <% if (locals.error) { %>
                            <div class="alert alert-danger">
                                <%= error %>
                            </div>
                            <% } %>

                                <form class="profile-form" action="/user/profile/edit" method="POST">
                                    <div class="form-group">
                                        <label for="username">사용자 ID</label>
                                        <input type="text" id="username" name="username" class="form-control"
                                            value="<%= profileUser.username %>" readonly>
                                    </div>

                                    <div class="form-group">
                                        <label for="name">이름</label>
                                        <input type="text" id="name" name="name" class="form-control"
                                            value="<%= profileUser.name %>" required>
                                    </div>

                                    <div class="form-group">
                                        <label for="email">이메일</label>
                                        <input type="email" id="email" name="email" class="form-control"
                                            value="<%= profileUser.email %>" required>
                                    </div>

                                    <% if (profileUser.role==='CLUB_MEMBER' ) { %>
                                        <div class="form-group">
                                            <label for="studentId">학번</label>
                                            <input type="text" id="studentId" name="studentId" class="form-control"
                                                value="<%= profileUser.studentId || '' %>">
                                        </div>
                                        <% } %>

                                            <% if (profileUser.role==='ARTIST' ) { %>
                                                <div class="form-group">
                                                    <label for="artistInfo">작가 정보</label>
                                                    <textarea id="artistInfo" name="artistInfo"
                                                        class="form-control"><%= profileUser.artistInfo || '' %></textarea>
                                                </div>
                                                <% } %>

                                                    <div class="form-group">
                                                        <label for="newPassword">새 비밀번호 (변경시에만 입력)</label>
                                                        <div class="password-input-group">
                                                            <input type="password" id="newPassword" name="newPassword"
                                                                class="form-control">
                                                            <button type="button" class="toggle-password">
                                                                <i class="fas fa-eye"></i>
                                                            </button>
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="confirmNewPassword">새 비밀번호 확인</label>
                                                        <div class="password-input-group">
                                                            <input type="password" id="confirmNewPassword"
                                                                name="confirmNewPassword" class="form-control">
                                                            <button type="button" class="toggle-password">
                                                                <i class="fas fa-eye"></i>
                                                            </button>
                                                        </div>
                                                    </div>

                                                    <div class="button-group">
                                                        <button type="submit" class="btn btn--primary">저장</button>
                                                        <a href="/user/profile" class="btn btn--secondary">취소</a>
                                                    </div>
                                </form>
                    </div>
                </div>
            </main>

            <%- include('../common/footer') %>
                <script src="/js/page/user/Profile.js"></script>
    </body>

</html>
