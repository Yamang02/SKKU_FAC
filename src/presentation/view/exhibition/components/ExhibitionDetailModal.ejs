<!-- 전시회 상세 모달 -->
<div class="modal exhibition-modal" id="exhibitionDetailModal">
    <div class="modal-content">
        <button class="close" id="closeExhibitionModal">&times;</button>
        <div class="modal-body">
            <div class="modal-image-container">
                <img src="" alt="전시회 이미지" class="modal-image" id="exhibitionModalImage">
            </div>
            <div class="modal-info">
                <div class="modal-info-header">
                    <h2 class="modal-title" id="exhibitionModalTitle"></h2>
                    <p class="modal-period" id="exhibitionModalPeriod"></p>
                </div>
                <div class="modal-description" id="exhibitionModalDescription"></div>
                <div class="modal-info-list">
                    <div class="info-item">
                        <span class="info-label">전시 유형</span>
                        <span class="info-value" id="exhibitionModalType"></span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">관람 시간</span>
                        <span class="info-value" id="exhibitionModalViewingHours"></span>
                    </div>
                    <div class="info-item location-schedule">
                        <span class="info-label">전시 장소</span>
                        <div class="location-list" id="exhibitionModalLocations">
                            <!-- 기간별 전시장소가 여기에 동적으로 추가됩니다 -->
                        </div>
                    </div>
                </div>
                <div class="modal-actions">
                    <a href="#" class="action-button primary-action" id="exhibitionModalArtworksButton">작품 목록 보기</a>
                </div>
            </div>
        </div>
    </div>
</div>
