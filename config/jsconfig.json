{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@domain/*": [
                "src/domain/*"
            ],
            "@application/*": [
                "src/application/*"
            ],
            "@infrastructure/*": [
                "src/infrastructure/*"
            ],
            "@interface/*": [
                "src/interface/*"
            ],
            "@presentation/*": [
                "src/presentation/*"
            ],
            "@view/*": [
                "src/presentation/view/*"
            ],
            "@common/*": [
                "src/presentation/view/common/*"
            ],
            "@asset/*": [
                "src/presentation/asset/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
