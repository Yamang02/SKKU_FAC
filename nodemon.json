{
    "watch": [
        "src/**/*"
    ],
    "ext": "js,json,ejs,css,html",
    "ignore": [
        "node_modules/**/*",
        "public/**/*",
        "logs/**/*",
        "*.log",
        "*.test.js",
        "coverage/**/*"
    ],
    "legacyWatch": true,
    "polling": true,
    "pollingInterval": 1000,
    "verbose": true,
    "env": {
        "NODE_ENV": "development"
    },
    "delay": 500
}
