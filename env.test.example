# 테스트 환경 설정 (.env.test)
# 이 파일을 프로젝트 루트의 .env.test로 복사하여 사용하세요

# 서버 설정
NODE_ENV=test
PORT=3001
HOST=0.0.0.0

# 데이터베이스 설정 (테스트용)
DB_HOST=mysql-test
DB_PORT=3306
DB_NAME=skku_sfa_gallery_test
DB_USER=root
DB_PASSWORD=testpassword

# Redis 설정 (테스트용)
REDIS_HOST=redis-test
REDIS_PORT=6379
REDIS_PASSWORD=testredispass
REDIS_DB=0

# 세션 설정
SESSION_SECRET=test_session_secret_key_for_testing_only
SESSION_NAME=skku_gallery_session_test

# JWT 설정
JWT_SECRET=test_jwt_secret_key_for_testing_only
JWT_EXPIRES_IN=1h

# 이메일 설정 (테스트용 - 실제 이메일 발송 안함)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=test_email@gmail.com
EMAIL_PASSWORD=test_app_password
EMAIL_FROM=SKKU Gallery Test <test_email@gmail.com>

# Cloudinary 설정 (테스트용)
CLOUDINARY_CLOUD_NAME=test_cloud_name
CLOUDINARY_API_KEY=test_api_key
CLOUDINARY_API_SECRET=test_api_secret

# 로깅 설정
LOG_LEVEL=error
LOG_FILE=logs/test.log

# 보안 설정
BCRYPT_ROUNDS=4
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# 테스트 모드 설정
DEBUG=false
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3001

# 테스트 전용 설정
TEST_MODE=true
DISABLE_EMAIL_SENDING=true
