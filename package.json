{
    "name": "skku-fac-gallery",
    "version": "1.0.0",
    "description": "SKKU Faculty Art Gallery Website",
    "main": "server.js",
    "type": "module",
    "engines": {
        "node": ">=14.0.0"
    },
    "scripts": {
        "dev": "cross-env NODE_ENV=development nodemon ./src/server.js",
        "start": "cross-env NODE_ENV=production node dist/server.js",
        "dbModelsync": "cross-env NODE_ENV=development nodemon modelsync.js",
        "lint": "npx eslint --config .eslintrc.json src/",
        "lint:fix": "npx eslint --config .eslintrc.json src/ --fix",
        "lint:css": "npx stylelint --config .stylelintrc.json \"./src/public/css/**/*.css\" --quiet",
        "lint:css:fix": "npx stylelint --config .stylelintrc.json \"./src/public/css/**/*.css\" --fix --quiet",
        "analyze": "npm run lint && npm run lint:css && echo '코드 분석이 완료되었습니다.'"
    },
    "dependencies": {
        "all": "^0.0.0",
        "bcrypt": "^5.1.1",
        "body-parser": "^1.20.2",
        "connect-flash": "^0.1.1",
        "dotenv": "^16.4.7",
        "ejs": "^3.1.9",
        "express": "^4.18.2",
        "express-basic-auth": "^1.2.1",
        "express-rate-limit": "^7.5.0",
        "express-session": "^1.18.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "module-alias": "^2.2.3",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.2",
        "mysql2": "^3.14.0",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0",
        "sequelize": "^6.37.7",
        "sharp": "^0.33.5",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@babel/core": "^7.26.10",
        "@babel/node": "^7.26.0",
        "@babel/preset-env": "^7.26.9",
        "@babel/register": "^7.25.9",
        "@eslint/js": "^9.21.0",
        "babel-plugin-module-resolver": "^5.0.2",
        "cross-env": "^7.0.3",
        "eslint": "^8.57.1",
        "eslint-plugin-filenames": "^1.3.2",
        "eslint-plugin-folders": "^1.0.4",
        "eslint-plugin-html": "^8.1.2",
        "globals": "^16.0.0",
        "nodemon": "^3.0.1",
        "purgecss": "^7.0.2",
        "stylelint": "^16.15.0",
        "stylelint-config-standard": "^37.0.0",
        "stylelint-order": "^6.0.4",
        "typescript-eslint": "^8.26.0"
    }
}
