{
    "name": "skku-fac-gallery",
    "version": "1.0.0",
    "description": "SKKU Faculty Art Gallery Website",
    "main": "server.js",
    "type": "module",
    "_moduleAliases": {
        "@root": ".",
        "@src": "src",
        "@domain": "src/domain",
        "@interface": "src/interface",
        "@infrastructure": "src/infrastructure",
        "@presentation": "src/presentation"
    },
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "lint": "npx eslint --config ./config/.eslintrc.json src/",
        "lint:fix": "npx eslint --config ./config/.eslintrc.json src/ --fix",
        "lint:css": "npx stylelint --config ./config/.stylelintrc.json \"public/css/**/*.css\" --quiet",
        "lint:css:fix": "npx stylelint --config ./config/.stylelintrc.json \"public/css/**/*.css\" --fix --quiet",
        "analyze": "npm run lint && npm run lint:css && echo '코드 분석이 완료되었습니다.'"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "body-parser": "^1.20.2",
        "connect-flash": "^0.1.1",
        "dotenv": "^16.4.7",
        "ejs": "^3.1.9",
        "express": "^4.18.2",
        "express-session": "^1.18.1",
        "jsonwebtoken": "^9.0.2",
        "module-alias": "^2.2.3",
        "multer": "^1.4.5-lts.2",
        "mysql2": "^3.6.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.21.0",
        "eslint": "^8.57.1",
        "eslint-plugin-filenames": "^1.3.2",
        "eslint-plugin-folders": "^1.0.4",
        "eslint-plugin-html": "^8.1.2",
        "globals": "^16.0.0",
        "nodemon": "^3.0.1",
        "stylelint": "^16.15.0",
        "stylelint-config-standard": "^37.0.0",
        "stylelint-order": "^6.0.4",
        "typescript-eslint": "^8.26.0"
    }
}
