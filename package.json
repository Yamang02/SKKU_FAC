{
    "name": "skku-fac-gallery",
    "version": "1.0.0",
    "description": "SKKU Faculty Art Gallery Website",
    "main": "server.js",
    "type": "module",
    "imports": {
        "#src/*": "./src/*",
        "#common/*": "./src/common/*",
        "#domain/*": "./src/domain/*",
        "#infrastructure/*": "./src/infrastructure/*",
        "#config/*": "./src/config/*",
        "#public/*": "./src/public/*"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "scripts": {
        "// === DEVELOPMENT ===": "",
        "dev": "cross-env NODE_ENV=development npx nodemon ./src/server.js",
        "dev:setup": "npm install && npm run test:install && echo '개발 환경 설정이 완료되었습니다.'",
        "dev:db": "cross-env NODE_ENV=development nodemon modelsync.js",
        "// === PRODUCTION ===": "",
        "build": "echo 'No build step required for Node.js'",
        "start": "cross-env NODE_ENV=production node ./src/server.js",
        "start:test": "cross-env NODE_ENV=test node src/server.js",
        "start:test:alpine": "NODE_ENV=test node src/server.js",
        "// === DOCKER ===": "",
        "docker:dev": "docker-compose up -d",
        "docker:dev:build": "docker-compose up -d --build",
        "docker:railway": "cross-env NODE_ENV=production DOCKER_COMMAND='npm start' docker-compose up -d app",
        "docker:mysql": "docker-compose up -d mysql",
        "docker:build": "docker-compose build",
        "docker:down": "docker-compose down",
        "docker:clean": "docker-compose down -v && docker system prune -f",
        "docker:logs": "docker-compose logs -f",
        "docker:restart": "docker-compose restart",
        "docker:test": "docker-compose --profile test up -d",
        "docker:test:local": "docker-compose -f docker-compose.test.yml --profile local-only up -d",
        "docker:test:railway": "docker-compose -f docker-compose.test.yml up mysql -d",
        "docker:test:down": "docker-compose --profile test down",
        "// === CODE QUALITY ===": "",
        "lint": "npx eslint --config .eslintrc.json src/",
        "lint:fix": "npx eslint --config .eslintrc.json src/ --fix",
        "lint:css": "npx stylelint --config .stylelintrc.json \"./src/public/css/**/*.css\" --quiet",
        "lint:css:fix": "npx stylelint --config .stylelintrc.json \"./src/public/css/**/*.css\" --fix --quiet",
        "format": "npx prettier --write \"src/**/*.{js,css,ejs,md}\" \"tests/**/*.js\" \"docs/**/*.md\" \"*.{js,json,md}\"",
        "format:check": "npx prettier --check \"src/**/*.{js,css,ejs,md}\" \"tests/**/*.js\" \"docs/**/*.md\" \"*.{js,json,md}\"",
        "format:css": "npx prettier --write \"src/public/css/**/*.css\"",
        "analyze": "npm run lint && npm run lint:css && npm run format:check && echo '코드 분석이 완료되었습니다.'",
        "quality": "npm run lint && npm run lint:css && npm run format && echo '코드 품질 검사가 완료되었습니다.'",
        "// === USER BEHAVIOR TESTS ===": "",
        "test": "playwright test",
        "test:headed": "playwright test --headed",
        "test:ui": "playwright test --ui",
        "test:debug": "playwright test --debug",
        "test:headless": "playwright test --config=playwright.local.config.js",
        "test:install": "playwright install",
        "test:clean": "rimraf test-results playwright-report && mkdir -p test-results",
        "test:report": "playwright show-report",
        "// === SIGNUP BEHAVIOR TESTS ===": "",
        "test:signup": "playwright test detailed-signup-behavior-test.spec.js",
        "test:login": "playwright test login-examples.spec.js",
        "test:auth": "playwright test tests/e2e/auth",
        "test:signup:headed": "playwright test detailed-signup-behavior-test.spec.js --headed",
        "test:signup:debug": "playwright test detailed-signup-behavior-test.spec.js --debug",
        "test:signup:step1": "playwright test detailed-signup-behavior-test.spec.js -g \"1단계\"",
        "test:signup:step2": "playwright test detailed-signup-behavior-test.spec.js -g \"2단계\"",
        "test:signup:step3": "playwright test detailed-signup-behavior-test.spec.js -g \"3단계\"",
        "test:signup:step4": "playwright test detailed-signup-behavior-test.spec.js -g \"4단계\"",
        "test:signup:step5": "playwright test detailed-signup-behavior-test.spec.js -g \"5단계\"",
        "test:signup:errors": "playwright test detailed-signup-behavior-test.spec.js -g \"6단계\"",
        "test:signup:accessibility": "playwright test detailed-signup-behavior-test.spec.js -g \"7단계\"",
        "// === LOGIN BEHAVIOR TESTS ===": "",
        "test:login": "playwright test detailed-login-behavior-test.spec.js",
        "test:login:headed": "playwright test detailed-login-behavior-test.spec.js --headed",
        "test:login:debug": "playwright test detailed-login-behavior-test.spec.js --debug",
        "test:login:step1": "playwright test detailed-login-behavior-test.spec.js -g \"1단계\"",
        "test:login:step2": "playwright test detailed-login-behavior-test.spec.js -g \"2단계\"",
        "test:login:step3": "playwright test detailed-login-behavior-test.spec.js -g \"3단계\"",
        "test:login:errors": "playwright test detailed-login-behavior-test.spec.js -g \"4단계\"",
        "test:login:accessibility": "playwright test detailed-login-behavior-test.spec.js -g \"5단계\"",
        "test:login:security": "playwright test detailed-login-behavior-test.spec.js -g \"6단계\"",
        "// === COMBINED TESTS ===": "",
        "test:auth": "playwright test",
        "test:auth:chromium": "playwright test --project=chromium",
        "test:auth:firefox": "playwright test --project=firefox",
        "// === UTILITY SCRIPTS ===": "",
        "diagnose": "node scripts/diagnose-env.js",
        "debug:env": "node debug-env.js",
        "debug:redis": "node test-redis-direct.js"
    },
    "dependencies": {
        "@sentry/node": "^9.25.1",
        "@sentry/profiling-node": "^9.25.1",
        "audit-ci": "^7.1.0",
        "bcrypt": "^5.1.1",
        "body-parser": "^1.20.2",
        "cache-manager": "^6.4.3",
        "cache-manager-redis-store": "^2.0.0",
        "compression": "^1.8.0",
        "connect-flash": "^0.1.1",
        "connect-redis": "^8.1.0",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "csrf": "^3.1.0",
        "dompurify": "^3.2.6",
        "dotenv": "^16.4.7",
        "ejs": "^3.1.9",
        "express": "^4.18.2",
        "express-basic-auth": "^1.2.1",
        "express-rate-limit": "^7.5.0",
        "express-session": "^1.18.1",
        "express-slow-down": "^2.1.0",
        "express-validator": "^7.2.1",
        "helmet": "^8.1.0",
        "html2canvas": "^1.4.1",
        "joi": "^17.9.2",
        "jsdom": "^26.1.0",
        "jsonwebtoken": "^9.0.2",
        "method-override": "^3.0.0",
        "morgan": "^1.10.0",
        "multer": "^2.0.0",
        "multer-storage-cloudinary": "^4.0.0",
        "mysql2": "^3.14.0",
        "node-forge": "^1.3.1",
        "nodemailer": "^6.10.1",
        "passport": "^0.7.0",
        "passport-google-oauth20": "^2.0.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pidusage": "^4.0.1",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0",
        "playwright": "^1.52.0",
        "prom-client": "^15.1.3",
        "qrcode": "^1.5.4",
        "rate-limit-redis": "^4.2.1",
        "redis": "^5.1.0",
        "sequelize": "^6.37.7",
        "sharp": "^0.33.5",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "task-master-ai": "^0.16.0",
        "uuid": "^11.1.0",
        "winston": "^3.8.2",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.21.0",
        "@faker-js/faker": "^9.8.0",
        "@playwright/test": "^1.52.0",
        "eslint": "^8.57.1",
        "eslint-plugin-filenames": "^1.3.2",
        "eslint-plugin-folders": "^1.0.4",
        "eslint-plugin-html": "^8.1.2",
        "globals": "^16.0.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.4.2",
        "purgecss": "^7.0.2",
        "stylelint": "^16.15.0",
        "stylelint-config-standard": "^37.0.0",
        "stylelint-order": "^6.0.4",
        "typescript-eslint": "^8.26.0"
    }
}
