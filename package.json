{
    "name": "skku-fac-gallery",
    "version": "1.0.0",
    "description": "SKKU Faculty Art Gallery Website",
    "main": "server.js",
    "type": "module",
    "engines": {
        "node": ">=14.0.0"
    },
    "scripts": {
        "dev": "cross-env NODE_ENV=development nodemon ./src/server.js",
        "start": "cross-env NODE_ENV=production node ./src/server.js",
        "start:test": "cross-env NODE_ENV=test node src/server.js",
        "dbModelsync": "cross-env NODE_ENV=development nodemon modelsync.js",
        "lint": "npx eslint --config .eslintrc.json src/",
        "lint:fix": "npx eslint --config .eslintrc.json src/ --fix",
        "lint:css": "npx stylelint --config .stylelintrc.json \"./src/public/css/**/*.css\" --quiet",
        "lint:css:fix": "npx stylelint --config .stylelintrc.json \"./src/public/css/**/*.css\" --fix --quiet",
        "analyze": "npm run lint && npm run lint:css && echo '코드 분석이 완료되었습니다.'",
        "test": "playwright test",
        "test:headed": "playwright test --headed",
        "test:ui": "playwright test --ui",
        "test:debug": "playwright test --debug",
        "test:basic-check": "playwright test tests/integration/basic-functionality.spec.js",
        "test:auth": "playwright test tests/e2e/auth/auth-tests.spec.js",
        "test:artwork": "playwright test tests/e2e/artwork-tests.spec.js",
        "test:exhibition": "playwright test tests/e2e/exhibition-tests.spec.js",
        "test:validation": "playwright test tests/unit/middleware/validation-middleware.spec.js",
        "test:critical": "playwright test tests/integration/basic-functionality.spec.js tests/e2e/auth/auth-tests.spec.js",
        "test:regression": "playwright test --grep=\"기본|로그인|목록\"",
        "test:user-roles": "playwright test tests/e2e/auth/user-role-tests.spec.js",
        "test:signup": "playwright test tests/e2e/auth/signup-test.spec.js",
        "test:signup:skku": "playwright test tests/e2e/auth/signup-test.spec.js --grep=\"SKKU 사용자\"",
        "test:signup:external": "playwright test tests/e2e/auth/signup-test.spec.js --grep=\"외부 사용자\"",
        "test:signup:simple": "playwright test tests/e2e/auth/simple-signup-test.spec.js",
        "test:smoke": "playwright test --grep='@smoke'",
        "test:report": "playwright show-report",
        "test:install": "playwright install",
        "test:railway": "cross-env TEST_ENVIRONMENT=railway playwright test --project=chromium",
        "test:railway:auth": "cross-env TEST_ENVIRONMENT=railway playwright test tests/e2e/auth/ --project=chromium",
        "test:railway:signup": "cross-env TEST_ENVIRONMENT=railway playwright test tests/e2e/auth/signup-test.spec.js --project=chromium",
        "test:railway:critical": "cross-env TEST_ENVIRONMENT=railway playwright test tests/integration/basic-functionality.spec.js tests/e2e/auth/auth-tests.spec.js --project=chromium",
        "test:railway:smoke": "cross-env TEST_ENVIRONMENT=railway playwright test --grep='@smoke' --project=chromium",
        "test:railway:validation": "cross-env TEST_ENVIRONMENT=railway playwright test tests/unit/middleware/validation-middleware.spec.js --project=chromium",
        "test:unit": "playwright test --config=playwright.unit.config.js --reporter=html",
        "test:unit:auth": "playwright test tests/unit/auth/ --config=playwright.unit.config.js --reporter=html",
        "test:unit:repository": "playwright test tests/unit/repository/ --config=playwright.unit.config.js --reporter=list",
        "test:integration": "playwright test --config=playwright.integration.config.js --reporter=html",
        "test:integration:repository": "playwright test tests/integration/repository-integration.spec.js --config=playwright.integration.config.js --reporter=list",
        "test:e2e": "playwright test --config=playwright.config.js --reporter=html",
        "test:auth-unit": "playwright test tests/unit/auth/ --config=playwright.unit.config.js --reporter=list",
        "test:auth-features": "node scripts/test-auth-features.js",
        "test:auth-full": "npm run test:auth-unit && npm run test:auth && npm run test:user-roles",
        "test:repository": "npm run test:unit:repository && npm run test:integration:repository",
        "test:unit:service": "playwright test tests/unit/service/ --config=playwright.unit.config.js --reporter=list",
        "test:service": "npm run test:unit:service",
        "test:artwork-domain": "npm run test:unit:service && npm run test:unit:repository",
        "test:unit:transaction": "playwright test tests/unit/transaction/ --config=playwright.unit.config.js --reporter=list",
        "test:transaction": "npm run test:unit:transaction",
        "test:transaction-management": "npm run test:unit:transaction && npm run test:unit:repository"
    },
    "dependencies": {
        "all": "^0.0.0",
        "bcrypt": "^5.1.1",
        "body-parser": "^1.20.2",
        "compression": "^1.8.0",
        "connect-flash": "^0.1.1",
        "connect-redis": "^8.1.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "ejs": "^3.1.9",
        "express": "^4.18.2",
        "express-basic-auth": "^1.2.1",
        "express-rate-limit": "^7.5.0",
        "express-session": "^1.18.1",
        "helmet": "^8.1.0",
        "html2canvas": "^1.4.1",
        "joi": "^17.9.2",
        "jsonwebtoken": "^9.0.2",
        "method-override": "^3.0.0",
        "module-alias": "^2.2.3",
        "morgan": "^1.10.0",
        "multer": "^2.0.0",
        "multer-storage-cloudinary": "^4.0.0",
        "mysql2": "^3.14.0",
        "node-forge": "^1.3.1",
        "nodemailer": "^6.10.1",
        "passport": "^0.7.0",
        "passport-google-oauth20": "^2.0.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0",
        "playwright": "^1.52.0",
        "qrcode": "^1.5.4",
        "redis": "^5.1.0",
        "sequelize": "^6.37.7",
        "sharp": "^0.33.5",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "task-master-ai": "^0.16.0",
        "uuid": "^11.1.0",
        "winston": "^3.8.2",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.26.10",
        "@babel/node": "^7.26.0",
        "@babel/preset-env": "^7.26.9",
        "@babel/register": "^7.25.9",
        "@eslint/js": "^9.21.0",
        "@playwright/test": "^1.48.0",
        "babel-plugin-module-resolver": "^5.0.2",
        "cross-env": "^7.0.3",
        "eslint": "^8.57.1",
        "eslint-plugin-filenames": "^1.3.2",
        "eslint-plugin-folders": "^1.0.4",
        "eslint-plugin-html": "^8.1.2",
        "globals": "^16.0.0",
        "nodemon": "^3.0.1",
        "purgecss": "^7.0.2",
        "stylelint": "^16.15.0",
        "stylelint-config-standard": "^37.0.0",
        "stylelint-order": "^6.0.4",
        "typescript-eslint": "^8.26.0"
    }
}
