# 개발 환경 설정 (.env.docker)
# 이 파일을 프로젝트 루트의 .env.docker로 복사하여 사용하세요

# 서버 설정
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# 데이터베이스 설정 (개발용)
DB_HOST=mysql
DB_PORT=3306
DB_NAME=skku_sfa_gallery
DB_USER=root
DB_PASSWORD=devpassword

# Redis 설정 (개발용)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=devredispass
REDIS_DB=0

# 세션 설정
SESSION_SECRET=dev_session_secret_key_change_in_production
SESSION_NAME=skku_gallery_session_dev

# JWT 설정
JWT_SECRET=dev_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# 이메일 설정 (개발용 - 실제 이메일 발송 안함)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=SKKU Gallery Dev <your_email@gmail.com>

# Cloudinary 설정 (이미지 업로드용)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# 로깅 설정
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# 보안 설정
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 개발 모드 설정
DEBUG=true
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000
